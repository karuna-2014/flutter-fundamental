import 'package:flutter/material.dart';

void main() {
  runApp(const MaterialApp(
    debugShowCheckedModeBanner: false,
    home: ShowImageOrText(),
  ));
}

class ShowImageOrText extends StatefulWidget {
  const ShowImageOrText({Key? key}) : super(key: key);

  @override
  State<ShowImageOrText> createState() => _ShowImageOrTextState();
}

class _ShowImageOrTextState extends State<ShowImageOrText> {
  bool showImage = false;  // Flag to toggle content

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Button Click Demo")),
      body: Padding(
        padding: const EdgeInsets.all(20.0),
        child: Column(
          children: [
            // Buttons Row
            Row(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                ElevatedButton(
                  onPressed: () {
                    setState(() {
                      showImage = true;
                    });
                  },
                  child: const Text("Button A"),
                ),
                const SizedBox(width: 20),
                ElevatedButton(
                  onPressed: () {
                    setState(() {
                      showImage = false;
                    });
                  },
                  child: const Text("Button B"),
                ),
              ],
            ),

            const SizedBox(height: 30),

            // Conditional display based on flag
            Expanded(
              child: Center(
                child: showImage
                    ? Image.asset(
                        'assets/sample_image.png',  // <-- your image path
                        width: 250,
                        height: 250,
                        fit: BoxFit.cover,
                      )
                    : Column(
                        mainAxisSize: MainAxisSize.min,
                        children: const [
                          Text("Name: John Doe",
                              style: TextStyle(fontSize: 20)),
                          SizedBox(height: 10),
                          Text("Phone: +1 234 567 890",
                              style: TextStyle(fontSize: 20)),
                          SizedBox(height: 10),
                          Text("Email: john.doe@example.com",
                              style: TextStyle(fontSize: 20)),
                        ],
                      ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
