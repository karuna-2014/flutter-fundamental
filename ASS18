import 'dart:math';
import 'package:flutter/material.dart';

void main() {
  runApp(const MaterialApp(
    home: LuckyNumberApp(),
    debugShowCheckedModeBanner: false,
  ));
}

class LuckyNumberApp extends StatefulWidget {
  const LuckyNumberApp({Key? key}) : super(key: key);

  @override
  State<LuckyNumberApp> createState() => _LuckyNumberAppState();
}

class _LuckyNumberAppState extends State<LuckyNumberApp> {
  int luckyNumber = 0;
  final Random _random = Random();

  // Method to generate random number between 0 and 350 (inclusive)
  int generateRandomNumber() {
    return _random.nextInt(351); // nextInt(351) generates 0 to 350 inclusive
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Lucky Number Generator')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: <Widget>[
            Text(
              'Your Lucky Number is:',
              style: Theme.of(context).textTheme.headline6,
            ),
            const SizedBox(height: 20),
            Text(
              '$luckyNumber',
              style: const TextStyle(fontSize: 48, fontWeight: FontWeight.bold),
            ),
            const SizedBox(height: 40),
            ElevatedButton(
              onPressed: () {
                setState(() {
                  luckyNumber = generateRandomNumber();
                });
              },
              child: const Text('Generate Lucky Number'),
            ),
          ],
        ),
      ),
    );
  }
}
